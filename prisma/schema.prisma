generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma/"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PostType {
  BERITA
  PENGUMUMAN
}

enum PostStatus {
  DRAFT
  PUBLISHED
}

model Post {
  id            Int        @id @default(autoincrement())
  type          PostType
  status        PostStatus @default(DRAFT)
  title         String
  featuredImage String?
  body          String?    @db.Text 
  date          DateTime? 
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

model GalleryItem {
  id        Int      @id @default(autoincrement())
  url       String   // URL gambar
  caption   String?
  createdAt DateTime @default(now())
}

model Potential {
  id        Int      @id @default(autoincrement())
  name      String
  desc      String?
  emoji     String?
  imageUrl  String?
  createdAt DateTime @default(now())
}

model ProfileInfo {
  key       String   @id // Contoh: "visi", "misi", "sejarahRingkas", "sejarahLengkap", "profilUmum"
  value     String   @db.Text
  updatedAt DateTime @updatedAt
}

model StructureMember {
  id         String    @id @default(uuid())
  jabatan    String
  nama       String
  nip        String?
  fotoUrl    String?
  positionX  Float     @default(0)
  positionY  Float     @default(0)
  parentId   String?
  parent     StructureMember? @relation("Hierarchy", fields: [parentId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  children   StructureMember[] @relation("Hierarchy")
  urutan     Int?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([parentId])
}

model PublishedStructure {
  id         String    @id @default(uuid())
  jabatan    String
  nama       String
  nip        String?
  fotoUrl    String?
  positionX  Float     @default(0)
  positionY  Float     @default(0)
  parentId   String?
  urutan     Int?
  publishedAt DateTime @default(now())
  
  @@index([parentId])
}

model StructureMetadata {
  id              Int      @id @default(1)
  hasUnpublished  Boolean  @default(false)
  lastPublishedAt DateTime?
  updatedAt       DateTime @updatedAt
}

model Setting {
  key       String   @id
  value     String   @db.Text
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}